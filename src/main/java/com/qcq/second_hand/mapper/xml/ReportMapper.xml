<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qcq.second_hand.mapper.ReportsMapper">

    <select id="findByReporterId" resultType="com.qcq.second_hand.entity.Reports">
        SELECT * FROM reports WHERE reporter_id = #{reporterId}
    </select>

    <select id="findByReportedProductId" resultType="com.qcq.second_hand.entity.Reports">
        SELECT * FROM reports WHERE reported_product_id = #{productId}
    </select>

    <select id="findByReportedUserId" resultType="com.qcq.second_hand.entity.Reports">
        SELECT * FROM reports WHERE reported_user_id = #{userId}
    </select>

</mapper>
